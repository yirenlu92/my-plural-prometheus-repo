  path = "helm/postgres"
  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "helm"

    args = [
      "dependency",
      "update",
    ]

    sha     = "366d5200a7f4d7d453625a38acc4e1b32b6ae0609d001e4881b0f8eb7a85c102"
    retries = 0
  }
}
